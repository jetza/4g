@model Oprema_za_mob_telefone.Models.KategorijeViewModels.KreirajKategorijuViewModel

@{
    ViewData["Title"] = "Kreiraj kategoriju";
}

<h2>@ViewBag.Title</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Kreiraj">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Naziv" class="control-label"></label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kreiraj" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="index">Nazad</a>
</div>

