@model Oprema_za_mob_telefone.Models.ProizvodiViewModels.KreirajProizvodViewModel

@{
    ViewData["Title"] = "Kreiraj proizvod";
}

<h2>@ViewBag.Title</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Kreiraj">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Naziv" class="control-label"></label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KategorijaId" class="control-label"></label>
                <select asp-for="KategorijaId" class="form-control">
                    @foreach (var lookup in Model.Kategorije)
            {
                <option value="@lookup.Id">@lookup.Naziv</option>
    }
                </select>
                <span asp-validation-for="KategorijaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Slika" class="control-label"></label>
                <input asp-for="Slika" class="form-control" type="url"/> 
                <span asp-validation-for="Slika" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Opis" class="control-label"></label>
                <textarea asp-for="Opis" class="form-control"></textarea>
                <span asp-validation-for="Opis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kreiraj" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="index">Nazad</a>
</div>

